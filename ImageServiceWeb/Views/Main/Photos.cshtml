@using ImageServiceWeb.Struct;
@model IEnumerable<ImageServiceWeb.Models.PhotosModel>
@{
    ViewBag.Title = "Photos";
}
<link rel="stylesheet"
      type="text/css"
      href="~/Content/photos.css">

<h2>Photo's Gallery</h2>
@for (int i=0; i < ViewBag.photos.Count; i++)
{
    <div class="col-xs-18 col-sm-6 col-md-3">
        <div class="thumbnail">
            <img src=@ViewBag.photos[i].Thumbnail>
            <div class="caption">
                <h4>Photo details</h4>
                <p>Name: @ViewBag.photos[i].Name</p>
                <p>Date: @ViewBag.photos[i].Date</p>
                <p>
                    <button type="button" class="btn btn-info btn-xs" id=@i.ToString() onclick="View(id)">View</button>
                    <button type="button" class="btn btn-danger btn-xs" id=@i.ToString() onclick="Delete(id)">Delete</button>
                </p>
            </div>
        </div>
    </div>
}

 <script>
     /* the function gets the photo index in the list,
      * and changes the location to ViewPhoto (sends the index via quary string) */
     function View(photoNum) {
         window.location.href = 'ViewPhoto?num=' + photoNum;
     }
     /* the function gets the photo index in the list,
      * and changes the location to DeletePhoto (sends the index via quary string) */
    function Delete(photoNum) {
         window.location.href = 'DeletePhoto?num=' + photoNum;
    }
</script>
